<% if @civil_subjects.present?  %>

<h1 class="lead">Kurikulum Teknik Sipil ISTPI</h1>

<div class="panel panel-default">
  <div class="panel-title pull-right">
    <%= render 'shared/search' %>
  </div>
  <div class="panel-body">
        <table class="table table-hover table-striped">
          <thead>
            <tr>
              <th>Kode</th>
              <th>Nama</th>
              <th>SKS</th>
              <th>Semester</th>
              <th>Kategori</th>

            </tr>
          </thead>

          <tbody>
            <% @civil_subjects.each do |civil_subject| %>
              <tr>
                <td><%= civil_subject.code %></td>
                <td><%= civil_subject.name.titleize if civil_subject %></td>
                <td><%= civil_subject.credit %></td>
                <td><%= civil_subject.semester.name if semester rescue nil %></td>
                <td><%= civil_subject.category %></td>

              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <br>
<% else %>
<h3 class="lead">Maaf Data Belum Ada, Silahkan Datang Kembali</h3>
<% end %>
