<%= simple_form_for(@civil_subject) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :credit %>
    <%= f.input :code %>
    <%= f.input :category %>
    <%= f.input :semester %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
