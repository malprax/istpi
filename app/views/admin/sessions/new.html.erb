<%= form_tag admin_sessions_path, :class => 'form-signin' do %>
  <h2 class= "form-sigin-heading">ISTPI Login</h2>
  <% if flash[:notice] %>
    <div class="alert alert-success">
      <%= flash[:notices] %>
    </div>
  <% end %>
  <% if flash[:alert] %>
    <div class="alert alert-danger">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <%= text_field_tag  :email, params[:email], class:'form-control', placeholder: 'Email Address' %>
  <%= password_field_tag  :password, '', class:'form-control', placeholder: 'Email Address' %>
</p>
<%= submit_tag "Log In", class: "btn btn-lg btn-primary btn-block" %>
<% end %>
