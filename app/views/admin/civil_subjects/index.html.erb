<% if @civil_subjects.present?  %>
<h1 class="lead">Kurikulum Teknik Sipil ISTPI&nbsp;&nbsp;<%= link_to 'Buat Mata Kuliah', new_admin_civil_subject_path, class: "btn btn-default" %></h1>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Kode</th>
      <th>Nama</th>
      <th>SKS</th>
      <th>Semester</th>
      <th>Kategori</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @civil_subjects.each do |civil_subject| %>
      <tr>
        <td><%= civil_subject.code %></td>
        <td><%= civil_subject.name.titleize if civil_subject %></td>
        <td><%= civil_subject.credit %></td>
        <td><%= civil_subject.semester %></td>
        <td><%= civil_subject.category %></td>
        <td><%= link_to 'Edit', edit_admin_civil_subject_path(civil_subject), class: 'btn btn-warning' %>&nbsp;<%= link_to 'Hapus', admin_civil_subject_path(civil_subject), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% else %>
<h3 class="lead">Maaf Data Belum Ada, &nbsp;&nbsp;<%= link_to 'Buat Mata Kuliah', new_admin_civil_subject_path, class: 'btn btn-default' %></h3>
<% end %>
