
<% if @semesters.present? %>
<h1 class="lead">Daftar Semester&nbsp;&nbsp;<%= link_to 'Buat Semester', new_semester_path, class:'btn btn-default' %></h1>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Semester</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @semesters.each do |semester| %>
      <tr>
        <td><%= semester.name %></td>
        <td><%= link_to 'Edit', edit_semester_path(semester), class:'btn btn-warning' %>&nbsp;&nbsp;<%= link_to 'Hapus', semester, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% else %>
<h3 class="lead">Maaf Data Belum Ada, Silahkan Datang Kembali..&nbsp;&nbsp;<%= link_to 'Buat Semester', new_semester_path, class:'btn btn-default' %></h3>
<% end %>
