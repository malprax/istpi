<!DOCTYPE html>
<html>
<head>
  <title>ISTPI</title>
  <%= stylesheet_link_tag    'admin/login', media: 'all', 'data-turbolinks-track' => true %>
  <%#= javascript_include_tag 'admin/application', 'data-turbolinks-track' => true %>
  <meta name="description" content="ISTPI">
  <meta name="author" content="Admin ISTPI">
  <meta name="keywords" content="istpi, institut sains dan teknologi pembangunan indonesia makassar">
  <%= favicon_link_tag 'favicon.ico', :rel => 'shortcut icon' %>
  <%= csrf_meta_tags %>
</head>
<body>
<section id="head_body">
  <div class="container">
    <div class="row">
      <div class = "col-sm-1" id="image_logo">
        <%= image_tag('logo_istpi_copy.png') %>
      </div>
      <div class="col-sm-8" id="text_logo">
          <p>YAYASAN PEMBANGUNAN INDONESIA</p>
          <p>INSTITUT SAINS DAN TEKNOLOGI PEMBANGUNAN INDONESIA</p>
          <p>Jln. Andi Pangeran Pettarani No.99 B, Makassar</p>
      </div>
    </div>
  </div>

</section>

<section class="navigasi">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">Admin ISTPI</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li class="<%= params[:controller]== 'pages' && params[:action]== 'index' ? 'active' : '' %>"><%= link_to "Beranda", root_url %></li>
        <li class="<%= params[:controller]== 'students_biographies' ? 'active' : '' %>"><%= link_to "Mahasiswa", students_biographies_path %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Perkuliahan <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to "Aturan", "#" %></li>
            <li><%= link_to "Jadwal", "#" %></li>
            <li><%= link_to "Nilai", "#" %></li>
            <li><%= link_to "Penasehat Akademik", "#" %></li>
            <li><%= link_to "Dosen", lectures_path %></li>
          </ul>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Biro Akademik<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li class="<%= params[:controller] == 'registrations' ? 'active' : '' %>"><%= link_to "Calon Mahasiswa", registrations_path %></li>
            <li ><%= link_to "Buku Induk", registrations_path %></li>
            <li ><%= link_to "Kalender Akademik", '#' %></li>
          </ul>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Biro Umum<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li ><%= link_to "Program Kerja", '#' %></li>
            <li class="<%= params[:controller] == 'functional_structurals' ? 'active' : '' %>"><%= link_to "Struktural", functional_structurals_path %></li>
          </ul>
        </li>

        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Persuratan<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li class="<%= params[:controller]== 'incomings' ? 'active' : '' %>"><%= link_to "Surat Masuk", incoming_mails_path %></li>
            <li class="<%= params[:controller]== 'outcomings' ? 'active' : '' %>"><%= link_to "Surat Keluar", outcoming_mails_path %></li>
          </ul>
        </li>
        <li ><%= link_to "Perpustakaan", '#' %></li>
        <li ><%= link_to "Keuangan", '#' %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <%# if user_signed_in? %>
          <li><%#= link_to "Edit Profile", edit_user_registration_path %></li>
          <li><%#= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
        <%# else %>
          <li><%#= link_to "Sign up", new_user_registration_path %></li>
          <li><%= link_to "Sign in", "#" %></li>
          <li><%#= link_to "Sign in", new_user_session_path %></li>
        <%# end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

</section>
<section class="body">
  <div class="container">
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
          <% if flash[:notice] %>
            <div class= "alert alert-success">
              <%= flash[:notice] %>
            </div>
          <% end %>
          <% if flash[:alert] %>
            <div class= "alert alert-success">
              <%= flash[:alert] %>
            </div>
          <% end %>
          <%= yield %>
      </div>
    </div>
  </div>
</section>



</body>
</html>




<div class="container">
  <form class="form-signin">
    <h2 class="form-signin-heading">Please sign in</h2>
    <label for="inputEmail" class="sr-only">Email address</label>
    <input type="email" id="inputEmail" class="form-control" placeholder="Email address" required="" autofocus="">
    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" id="inputPassword" class="form-control" placeholder="Password" required="">
    <div class="checkbox">
      <label>
        <input type="checkbox" value="remember-me"> Remember me
      </label>
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
  </form>

</div>
