<% if @classrooms.present? %>
<h1 class="lead">Daftar Ruang Kelas&nbsp;&nbsp;<%= link_to 'Buat Ruang Kelas', new_admin_classroom_path, class:'btn btn-default' %></h1>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Ruang Kelas</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @classrooms.each do |classroom| %>
      <tr>
        <td><%= classroom.room.upcase %></td>
        <td><%= link_to 'Edit', edit_admin_classroom_path(classroom), class:'btn btn-warning' %>&nbsp;&nbsp;<%= link_to 'Destroy', admin_classroom_path(classroom), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% else %>
<h3 class="lead">Maaf Data Belum Ada, &nbsp;&nbsp;<%= link_to 'Buat Ruang Kelas', new_admin_classroom_path, class: 'btn btn-default' %></h3>
<% end %>
