<% if @registrations.present? %>
<div class="well">
  <h3 class="lead">Daftar Calon Mahasiswa Baru &nbsp; <%= link_to 'Buat', admin_new_calon_mahasiswa_path, class: "btn btn-primary" %></h3>
  <div class="panel panel-default">
    <div class="panel-head pull-right">
      <%= render 'shared/search' %>
    </div>
    <div class="panel-body">
      <table class= "table table-hover table-striped">
        <thead>
          <tr>
            <th>Kode Formulir</th>
            <th>Nama</th>
            <th>Jenis Kelamin</th>
            <th>Nomor Kontak</th>
            <th>Referal</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @registrations.each do |registration| %>
            <tr>
              <td><%= registration.angka_bulan %></td>
              <td><%= registration.nama %></td>
              <td><%= registration.jenis_kelamin %></td>
              <td><%= registration.kontak_person %></td>
              <td><%= registration.referal %></td>
              <td><%= link_to "Edit", admin_edit_calon_mahasiswa_path(registration) %></td>
              <td><%= link_to "Hapus", admin_delete_calon_mahasiswa_path(registration), method: :delete, data:{confirm: "Hapus Calon Mahasiswa?"} %></td>
              <td><%= link_to "cetak", download_pdf_path(:id => registration.id, format: 'pdf'), target: '_blank' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <br>
  <%#= will_paginate @registrations %>
</div>
<% else %>
<div class="col-md-12">
	<h3>Calon Mahasiswa Hari Ini Belum Ada, Silahkan Menunggu.. </h3>
</div>
<% end %>
