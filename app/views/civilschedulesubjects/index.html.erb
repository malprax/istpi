<div class='container-fluid'>
  <div class='row'>
    <div class='col-xs-12 col-sm-12 col-md-12'>
<% if @civilschedulesubjects.present? %>
        <h3 class="lead">Jadwal Kuliah Teknik Sipil</h1>

        <table class="table table-hover table-striped">
          <thead>
            <tr>
              <th>Hari</th>
              <th>Waktu</th>
              <th>Mata Kuliah</th>
              <th>Dosen</th>
              <th>Ruangan</th>
              <th colspan="1"></th>
            </tr>
          </thead>

          <tbody>
            <% @civilschedulesubjects.each do |civilschedulesubject| %>
              <tr>
                <td><%= civilschedulesubject.day %></td>
                <td><%= civilschedulesubject.classtime.time rescue nil %></td>
                <td><%= civilschedulesubject.civil_subject.name.titleize rescue nil %></td>
                <td><%= civilschedulesubject.lecture1.name rescue nil %></td>
                <td><%= civilschedulesubject.classroom.room.upcase rescue nil  %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>
          <%= link_to 'Download Jadwal', civilschedulesubjects_path(@civilschedulesubjects, format:'pdf'), target:'_blank', class:'btn btn-default' %>

<% else %>
<h3 class="lead">Maaf, Belum Ada Data Buku Induk Silahkan Kembali Lain Waktu..</h3>
<% end %>
    </div>
  </div>
</div>
