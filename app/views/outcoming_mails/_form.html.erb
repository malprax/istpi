<%= simple_form_for(@outcoming_mail) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :address, label: "Alamat" %>
    <%= f.input :date, label: "Tanggal" %>
    <%= f.input :abouts, label: "Perihal" %>
    <%= f.input :nomor_petunjuk, label: "Nomor Petunjuk", collection:['1. Akademik','2.Keuangan','3. Kemahasiswaan','4.Administrasi','5. Materil', '6. Keputusan', '7. Dan Lain-Lain'] %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
