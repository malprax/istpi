<!DOCTYPE html>
<html>
<head>
  <title>Login ISTPI</title>
  <%= stylesheet_link_tag    'admin/login', media: 'all', 'data-turbolinks-track' => true %>
  <%#= javascript_include_tag 'admin/application', 'data-turbolinks-track' => true %>
  <meta name="description" content="ISTPI">
  <meta name="author" content="Admin ISTPI">
  <meta name="keywords" content="istpi, institut sains dan teknologi pembangunan indonesia makassar">
  <%= favicon_link_tag 'favicon.ico', :rel => 'shortcut icon' %>
  <%= csrf_meta_tags %>
</head>
<body>
<section class="body">
  <div class="container">
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
          <% if flash[:notice] %>
            <div class= "alert alert-success">
              <%= flash[:notice] %>
            </div>
          <% end %>
          <% if flash[:alert] %>
            <div class= "alert alert-success">
              <%= flash[:alert] %>
            </div>
          <% end %>
          <%= yield %>
      </div>
    </div>
  </div>
</section>
</body>
</html>
