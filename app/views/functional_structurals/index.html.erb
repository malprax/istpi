<p id="notice"><%= notice %></p>

<h3 class="lead">Struktural ISTPI</h1>

<table class="table table-stripped table-hover">
  <thead>
    <tr>
      <th>Nama</th>
      <th>Jabatan</th>
      <th>NIP</th>
      <th>NIDN</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @functional_structurals.each do |functional_structural| %>
      <tr>
        <td><%= link_to functional_structural.name, functional_structural %></td>
        <td><%= functional_structural.jabatan %></td>
        <td><%= functional_structural.nip %></td>
        <td><%= functional_structural.nidn %></td>
        <td><%= link_to 'Edit', edit_functional_structural_path(functional_structural) %></td>
        <td><%= link_to 'Hapus', functional_structural, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

