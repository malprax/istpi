<div class="container-fluid">
  <div class="row">
    <div class="col-sm-4">
      <div class="row">
        <div class="panel panel-success panel-hover">
            <!-- Default panel contents -->
            <div class="panel-heading">
              <div class="panel-title">
                  Syarat Pendaftaran!
              </div>
            </div>
            <!-- List group -->
            <ul class="list-group">
              <li class="list-group-item">Biaya Pendaftaran Sebesar Rp. 250.000,-</li>
              <li class="list-group-item">Biaya SPP persemester Rp. 1.500.000,-</li>
              <li class="list-group-item">Fotocopy Ijazah SMU/Sederajat legalisir</li>
              <li class="list-group-item">Fotocopy Transkrip Nilai SMU/Sederajat legalisir</li>
              <li class="list-group-item">Pas Photo 3x4 warna/hitam putih 2 lembar</li>
            </ul>
          </div>
      </div>

      <div class="row">
        <div class="panel panel-warning panel-hover">
            <!-- Default panel contents -->
            <div class="panel-heading">
              <div class="panel-title">
                  Waktu Pendaftaran!
              </div>
            </div>
            <!-- List group -->
            <ul class="list-group">
              <li class="list-group-item">Pendaftaran Dari 2 Mei - 30 Agustus 2016</li>
              <li class="list-group-item">Ujian Masuk 5 September 2016</li>
              <li class="list-group-item">Pengumuman Kelulusan 7 September 2016</li>
              <li class="list-group-item">Pendaftaran Ulang 7 - 20 September 2016</li>
              <li class="list-group-item">Kuliah Perdana 26 September 2016</li>
            </ul>
          </div>
      </div>

    </div>
    <div class="col-sm-8">
      <%= simple_form_for(@registration, wrapper: :horizontal_form, html: {class: 'form-horizontal'}) do |f| %>
        <%= f.error_notification %>

            <%= f.input :nama, label: "Nama" %>
            <%= f.input :tempat_lahir, label: "Tempat Lahir"%>
            <%= f.input :tanggal_lahir, label: "Tanggal Lahir", as: :datepicker, required: false, :placeholder => 'select date', input_html:{class: "form-control"}%>
            <%= f.input :jenis_kelamin, label: "Jenis Kelamin", collection: ["Laki-laki", "Perempuan"]%>
            <%= f.input :alamat, label: "Alamat"%>
            <%= f.input :kontak_person, label: "Nomor Handphone", wrapper: :horizontal_form  %>
            <%= f.input :asal_sekolah, label: "Asal Sekolah"%>
            <%= f.input :tahun_lulus, label: "Tahun Lulus"%>
            <%#= f.input :fakultas_peminat, label: "Fakultas Yang Diminati"%>
            <%= f.input :jurusan_peminat, label: "Pilih Program Studi", collection: ["Teknik Sipil", "Teknik Elektro"]%>
            <%= f.input :referal, label: "Referal"%>
        <div class="col-sm-offset-3">
          <% if params[:controller] == 'registrations' && params[:action] == 'new' %>
          <%= f.button :submit, "Daftar Baru", class: "btn btn-success" %>
          <% else %>
          <%= f.button :submit, "Edit Daftar", class: "btn btn-success" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
$(document).ready(function(){
  $('.datepicker').datepicker({
    format: "DD, dd MM yyyy",
    todayBtn: "linked",
    language: "id",
    calendarWeeks: true,
    autoclose: true,
    todayHighlight: true
  });

  });

</script>
